<div class="d-flex justify-content-between">
  <div>
    <h1 style="position: relative;top: 170px;">Welcome to WHOOF your one-stop shop for cuddly vibes</h1>
  </div>
  <div class = "col-md-7 px-4 pt-3 pb-4 mb-2"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cdc.gov/healthypets/images/pets/cute-dog-headshot.jpg?_=42445);position: sticky;width:50%;height: 450px;">
      <%#= link_to "See All",dogs_url, class: "btn btn-outline-success"%>
  </div>
</div>
<div class = 'container'>
  <h2 clas>The most popular dogs this week</h2>
  <div class = "pb-4">
    <div class="row no-gutters">
      <% @dogs.each do |dog|  %>
        <div class="col-md-4 pb-3">
          <%= link_to dog_path(dog) do %>
            <div class="card-category">
              <% if dog.photo.present? %>
                <div class = "mx-0.5 dog-pics">
                  <%= cl_image_tag dog.photo.key, height: 150, width: 150, crop: :fill %>
                </div>
                <div class = "text-right">
                  <div class="card-body">
                    <p class="card-text text-right"><strong><%= dog.name %></strong></p>
                    <p class="card-text text-right">Price: $<%= dog.price %></p>
                    <p class="card-text text-right">Breed:<%= dog.breed %></p>
                  </div>
                </div>
              <%else%>
                <div class = "text-center">
                  <div class="card-body">
                    <p class="card-text text-right"><strong><%= dog.name %></strong></p>
                    <p class="card-text text-right">Price: $<%= dog.price %></p>
                    <p class="card-text text-right">Breed:<%= dog.breed %></p>
                  </div>
                </div>
              <%end%>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div >
</div>
