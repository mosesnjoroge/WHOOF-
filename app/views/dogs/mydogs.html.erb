<div class="content">
  <div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.cdc.gov/healthypets/images/pets/cute-dog-headshot.jpg?_=42445);">
  </div>
</div>
<h3 class = 'text-center'>Your Current Doggo Rentals</h3>

<div class = "container pb-4 pt-4">
  <div class = "row no-gutters">
    <% @mydogs.each do |mydog|  %>
      <div class="col-6 pb-3 px-5">
        <div class="d-flex justify-content-between">
          <% if mydog.photo.present? %>
            <div class = 'col'>
              <div class = 'mydog-photo-card'>
                <%= cl_image_tag mydog.photo.key, width: 252 , height:170, crop: :fill %>
              </div>
              <p>
                Name:<%=mydog.name %>
                <div>
                  Breed:<%=mydog.breed%>
                </div>
              </p>
              <div>
                Price:$<%=mydog.price%>
              </div>
              <div>
                <%= link_to 'Update dog',edit_dog_path(mydog), class: 'btn btn-outline-success' %>
                <%= link_to 'Remove dog',removedog_path(mydog.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{mydog.name} from your Rentals?"}, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          <%else%>
            <div class = 'card-body'>
              <div class = "mydog-upload-title text-center">
                <h5><strong>Please upload photo</strong> </h5>
              </div>

                <p>
                  Name:<%=mydog.name %>
                  <div>
                    Breed:<%=mydog.breed%>
                  </div>
                </p>
                <div>
                  Price:$<%=mydog.price%>
                </div>

            </div>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>
