<div>
  <%= render 'shared/banner'%>
  <%= link_to 'ADD',new_dog_path, class: 'btn btn-outline-success' %>
</div>

<div class = "container pb-4 pt-4">
  <div class = "row no-gutters">
    <% @mydogs.each do |mydog|  %>
      <div class="pb-3">
        <div class="card-category">
          <% if mydog.photo.present? %>
            <div class="card-body">
              <div class="mydog-card-photo">
                <%= cl_image_tag mydog.photo.key, crop: :fit %>
              </div>
              <div class = 'mydog-photo-text'>
                <p>
                  Name:<%=mydog.name %>
                  <div>
                    Breed:<%=mydog.breed%>
                  </div>
                </p>
                <div>
                  Price:$<%=mydog.price%>
                </div>
              </div>
            </div>
          <%else%>
            <div class = 'card-body'>
              <div class = "mydog-upload-title text-center">
                <h5><strong>Please upload photo</strong> </h5>
              </div>
              <div class = 'mydog-text'>
                <p>
                  Name:<%=mydog.name %>
                  <div>
                    Breed:<%=mydog.breed%>
                  </div>
                </p>
                <div>
                  Price:$<%=mydog.price%>
                </div>
              </div>
            </div>
          <%end%>
          <div class="mydog-card-link">
            <%= link_to 'Update dog',edit_dog_path(mydog), class: 'btn btn-outline-success' %>
            <%= link_to 'Remove dog',removedog_path(mydog.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{mydog.name} from your Rentals?"}, class: 'btn btn-outline-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
