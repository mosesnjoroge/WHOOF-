<div class = 'container pb-4 pt-4'>
  <div class="row no-gutters">
    <% @dogs.each do |doggo|  %>
      <div class="col-lg pb-3">
        <div class="card-category">
          <% if doggo.photo.present? %>
            <%= cl_image_tag doggo.photo.key, height: 180, width: 200, crop: :fit %>
            <div class="card-body">
              <div class="card-title">
                <h5><%= doggo.name %></h5>
              </div>
              <div class="card-text">
                <p >Breed: <%= doggo.breed %></p>
                <p>Location: <%= doggo.user.address %></p>
                <p>Price: $<%= doggo.price %></p>
              </div>
              <div class="card-link">
                <%= link_to 'Check me out',dog_path(doggo), class: 'btn btn-outline-success' %>
              </div>
            </div>
          <%else%>
            <div class="card-body">
              <div class="card-title">
                <h5><%= doggo.name %></h5>
              </div>
              <div class="card-text">
                <p>Breed: <%= doggo.breed %></p>
                <p>location: <%= doggo.user.address %></p>
                <p>price: $<%= doggo.price %></p>
              </div>
              <div class = 'card-link'>
                <%= link_to 'Check me out',dog_path(doggo), class: 'btn btn-outline-success' %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>

