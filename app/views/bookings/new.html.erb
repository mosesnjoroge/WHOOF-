<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow text-center">
        <h3>Booking for:
          <%= @dog.name %>
        </h3>
        <%= simple_form_for [@dog, @booking] do |f| %>
          <div class="col">
            <div class="d-flex justify-content-between">
              <div class="container">
                <%= f.input  :startdate, placeholder: '1/1/2021', :label =>'Start Date' %>
              </div>
              <div class="container">
                <%= f.input  :enddate, placeholder: '1/1/2021', :label =>'End Date' %>
              </div>
            </div>
          </div>
          <%= f.submit :label =>"Reserve", class: "btn btn-outline-success d-flex w-100" %>
          <%= link_to "Back", dog_path(@dog), class: "btn btn-outline-danger mt-2 w-100"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
