<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a dog to your Bookings</h3>
        <%= simple_form_for [@dog, @booking] do |f| %>
          <%= f.input :startdate, placeholder: '1/1/2021' %>
          <%= f.input :enddate, placeholder: '1/1/2021' %>
          <%= f.submit "Reserve", class: "btn btn-outline-success d-flex w-100" %>
          <%= link_to "Back", dog_path(@dog), class: "btn btn-outline-danger mt-2"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
